@model MyIMDB.Web.ViewModels.Movies.MoviesListViewModel
@{
    this.ViewData["Title"] = "All movies, page " + Model.PageNumber;
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<div class="row">
    @foreach(var movie in this.Model.Movies)
    {
        <div class="d-flex col-md-4">
            <div class="flex-shrink-0">
                <img src="@movie.ImageUrl" width="100" class="mr-3 img-responsive">
            </div>
            <div class="flex-grow-1 ms-4">
                <h5 class=" mt-0"><a asp-action="ById" asp-route-id="@movie.Id">@movie.Title</a></h5>
                @movie.GenreName
                @*This is some content from a media component. You can replace this with any content and adjust it as needed.*@
            </div>
        </div>
    }
</div>
<hr />
<partial name="_PagingPartial" model="@Model" />